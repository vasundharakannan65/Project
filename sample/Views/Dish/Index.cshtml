@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Dish>

<div class="row justify-content-center">
    <div class="col-auto">
        <h3>LIST OF DISHES AVAILABLE</h3>
    </div>
</div>

<div class="row justify-content-end">
    <div class="col-4 col-sm-2">
        <a class="btn btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i> Add Dish</a>
    </div>
</div>


<div class="row justify-content-center mt-3">
    <div class="col-12">
        <table class="table table-bordered table-responsive table-striped text-center">
            <thead>
                <tr>
                    <th width="30%">Image</th>
                    <th width="20%">Name</th>
                    <th width="20%">Description</th>
                    <th width="30%">Action</th>
                </tr>
            </thead>
            <tbody class="p-2">
                @foreach (var dish in Model)
                {
                    <tr>
                        <td>@dish.DishImage</td>
                        <td>@dish.DishName</td>
                        <td>@dish.DishDesc</td>
                        <td>
                            <a asp-controller="Dish" asp-action="Details" asp-route-id="@dish.DishId" class="btn btn-info ml-3">Details</a>
                            <a asp-controller="Dish" asp-action="Update" asp-route-id="@dish.DishId" class="btn btn-warning ml-3">Edit</a>
                            <a asp-controller="Dish" asp-action="Delete" asp-route-id="@dish.DishId" class="btn btn-danger ml-3"
                               onclick="return confirm('Are you Sure to delete the dish')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

