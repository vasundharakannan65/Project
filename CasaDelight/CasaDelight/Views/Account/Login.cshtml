@{
    ViewData["Title"] = "Login";
}

@model CasaDelight.ViewModels.LoginViewModel

<div class="container col-md-offset-2">
    <div class="row">
        <div class="col">
            <div class="card justify-content-center">
                <div class="card-header text-center">
                    <h2>Login</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <form asp-action="Login" method="post">

                                <div class="form-group col">
                                    <label asp-for="Email">Email address</label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email Id" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group col">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group col">
                                    <input type="checkbox" asp-for="RememberMe" />
                                    <label asp-for="RememberMe">Remember Me</label>
                                </div>

                                <div class="form-group col">
                                    <div class="d-grid gap-2 d-md-block">
                                        <input type="submit" class="btn btn-primary" value="Login" onclick="return alert('Successfully logged In!')" />
                                        <input type="reset" class="btn btn-danger" value="Cancel" />
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="col-md-10">
                        Doesn't have an account yet?<a asp-action="Register"> Register</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}