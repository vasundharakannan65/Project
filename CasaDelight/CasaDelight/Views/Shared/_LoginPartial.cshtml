@using CasaDelight.Models.Models

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <form method="post" asp-action="LogOff" asp-controller="Account" id="logoutForm">
        <ul class="nav navbar-nav">
            <li class="text-dark nav-link">
                Welcome, @User.Identity.Name
            </li>
            <li class="text-dark nav-link">
                <a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="nav-link text-dark">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="nav-link text-dark">
                Sign In
            </a>
        </li>
    </ul>
}