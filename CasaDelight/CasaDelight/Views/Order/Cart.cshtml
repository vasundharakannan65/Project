@{
    ViewData["Title"] = "Cart";
}

@model ICollection<CasaDelight.Models.Models.Dish>

<div class="container col-md-offset-2">
    <div class="row">
        <div class="col">
            <div class="card justify-content-center">
                <div class="card-header text-center">
                    <h2>Summary</h2>
                </div>

                <div class="card-body">

                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="col">
                                <ul>

                                        <li>
                                            Ordered Item : @item.DishName
                                        </li>
                                        <li>
                                            Total Price : $@item.DishPrice
                                        </li>

                                </ul>
                            </div>
                        }

                    </div>
                </div>

                <div class="card-footer">
                    <div class="col">
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-info float-right" asp-action="" asp-controller="" onclick="return confirm('Please confirm the order!')">Place order</a>
                            <a class="btn btn-info float-left">Continue Buying</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


